<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_title_category_syncronisation">
        <Preference android:icon="@drawable/ic_sync_dropbox" android:title="@string/pref_title_sync_dropbox" android:key="sync_dropbox" />
        <CheckBoxPreference android:title="@string/pref_title_sync_on_start" android:key="sync_on_start" android:summary="@string/pref_summary_sync_on_start" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/pref_title_sync_on_change" android:key="sync_on_change" android:summary="@string/pref_summary_sync_on_change" android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_title_category_backup">
        <Preference android:title="@string/pref_title_backup" android:key="backup" android:summary="@string/pref_summary_backup" />
        <Preference android:title="@string/pref_title_restore" android:key="restore" android:summary="@string/pref_summary_restore" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_title_category_export">
        <Preference android:title="@string/pref_title_exportcsv" android:key="exportcsv" android:summary="@string/pref_summary_exportcsv" />
        <Preference android:title="@string/pref_title_importcsv" android:key="importcsv" android:summary="@string/pref_summary_importcsv" />
    </PreferenceCategory>
</PreferenceScreen>